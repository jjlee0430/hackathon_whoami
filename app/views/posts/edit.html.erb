<h1>글 수정</h1>
<form action="/posts/update/<%= @post.id %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    제목 : <input type="text" name="edit_title" value="<%= @post.title %>"><br />
    내용 : <textarea name="edit_content" rows="8" cols="80"><%= @post.content %></textarea><br />
    <input type="submit" value="제출">

</form>
